<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addIncome">


    <ImageView
        android:id="@+id/expenseSelectCategoryImageView"
        android:layout_width="313dp"
        android:layout_height="88dp"
        android:layout_marginTop="152dp"
        android:src="@drawable/ic_boxbg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/expenseAmountImageView"
        android:layout_width="313dp"
        android:layout_height="88dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_boxbg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expenseSelectCategoryImageView" />

    <EditText
        android:id="@+id/amountTakaEditText"
        android:layout_width="272dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:hint="Amount (in Taka)"
        app:layout_constraintBottom_toBottomOf="@+id/expenseAmountImageView"
        app:layout_constraintEnd_toEndOf="@+id/expenseAmountImageView"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/expenseAmountImageView"
        app:layout_constraintTop_toTopOf="@+id/expenseAmountImageView" />

    <ImageView
        android:id="@+id/commentImageView"
        android:layout_width="313dp"
        android:layout_height="88dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_boxbg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expenseAmountImageView" />

    <EditText
        android:id="@+id/commentEditText"
        android:layout_width="272dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:hint="Comment"
        app:layout_constraintBottom_toBottomOf="@+id/commentImageView"
        app:layout_constraintEnd_toEndOf="@+id/commentImageView"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/commentImageView"
        app:layout_constraintTop_toTopOf="@+id/commentImageView" />


    <Button
        android:id="@+id/addExpeseButton"
        android:layout_width="153dp"
        android:layout_height="40dp"
        android:layout_marginBottom="136dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/roboto_bold"
        android:text="ADD EXPENSE"
        android:textColor="@color/offWhiteColor"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commentImageView"
        app:layout_constraintVertical_bias="0.926"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>